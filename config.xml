<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="3.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    
    <name short="Weather">Weather App</name>
    <description>Weather application with Apache Cordova</description>
    <icon src="www/Public/img/Weather.png" />
    
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>
    
    <content src="index.html" />
    
    <access origin="https://api.openweathermap.org"></access>
    <access origin="http://api.openweathermap.org"></access>
    
    <allow-navigation href="https://api.openweathermap.org/*" />
    
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="geo:*" />

    <plugin name="cordova-plugin-geolocation" spec="^5.0.0" />
    
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    
</widget>
